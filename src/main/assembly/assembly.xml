<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>/</baseDirectory>

    <files>
        <file>
            <source>target/${project.artifactId}-${project.version}-jar-with-dependencies.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/classes/narsaq.bat</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>EDSDK</directory>
            <outputDirectory>EDSDK</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>EDSDK_64</directory>
            <outputDirectory>EDSDK_64</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>